<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="SplashTheme" parent="AppTheme">
        <item name="android:windowBackground">@drawable/splash</item>
        <item name="android:windowFullscreen">false</item>
        <item name="windowNoTitle">true</item>
<!--        <item name="android:windowIsTranslucent">false</item>-->
<!--        <item name="android:windowDisablePreview">true</item>-->
    </style>
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">

        <item name="colorPrimary">@color/topic</item>
        <item name="android:navigationBarColor">@color/grey2</item>
    </style>

    <style name="SCBSwitch" parent="ThemeOverlay.AppCompat.Dark">
        <!-- active thumb & track color (30% transparency) -->
        <item name="colorControlActivated">@color/topic</item>
        <!-- inactive thumb color -->
        <item name="colorSwitchThumbNormal">#f1f1f1</item>

        <!-- inactive track color (30% transparency) -->
        <item name="android:colorForeground">#eee</item>
    </style>

    <style name="TextAppearanceNight">
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="TextAppearanceDay">
        <item name="android:textColor">@color/grey2</item>
    </style>
    <style name="fab_rounded">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
        <item name="cornerSizeTopLeft">20dp</item>
        <item name="cornerSizeTopRight">20dp</item>
        <item name="cornerSizeBottomLeft">20dp</item>
        <item name="cornerSizeBottomRight">20dp</item>
    </style>
</resources>